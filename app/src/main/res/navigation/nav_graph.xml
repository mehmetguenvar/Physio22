<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/patientFragment"
        android:name="com.example.mehme.physio22.PatientFragment"
        android:label="fragment_patient"
        tools:layout="@layout/fragment_patient" >
        <action
            android:id="@+id/action_patientFragment_to_patientsucheFragment"
            app:destination="@id/patientsucheFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.mehme.physio22.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mehme.physio22.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_patientFragment"
            app:destination="@id/patientFragment" />
        <action
            android:id="@+id/action_mainFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment" />
        <action
            android:id="@+id/action_mainFragment_to_einstellungenFragment"
            app:destination="@id/einstellungenFragment" />
    </fragment>
    <fragment
        android:id="@+id/einstellungenFragment"
        android:name="com.example.mehme.physio22.EinstellungenFragment"
        android:label="fragment_einstellungen"
        tools:layout="@layout/fragment_einstellungen" />
    <fragment
        android:id="@+id/patientsucheFragment"
        android:name="com.example.mehme.physio22.PatientsucheFragment"
        android:label="PatientsucheFragment" />
</navigation>